<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo
http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- dubbo发布服务 -->
    <!-- provider方信息，用于计算依赖关系 -->
    <dubbo:application name="dubbo-provider"></dubbo:application>
    <!-- 配置zookeeper地址，集群用逗号分割 -->
    <dubbo:registry protocol="zookeeper" address="zookeeper://127.0.0.1:2181"></dubbo:registry>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20990"></dubbo:protocol>
    <!-- 通过注解的方式申明暴露接口:<dubbo:annotation package="com.rovger.dubbo"></dubbo:annotation> -->
    <dubbo:service interface="com.rovger.dubbo.DubboService" ref="dubboService"></dubbo:service>

    <bean id="dubboService" class="com.rovger.dubbo.impl.DubboServiceImpl"></bean>

</beans>